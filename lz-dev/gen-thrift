#!/bin/bash

if (( $# == 0 ))
then
    echo "No input files" 1>&2
    echo "Usage: $(basename $0) FILE ..." 1>&2
    exit 1
fi


PKG="src/main/java/service"
rm -f $PKG/*.java

thrift -r -out src/main/java -gen java "$@"

